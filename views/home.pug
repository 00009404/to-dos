extends layout.pug

block content
  if error
    p.err Please fill in the input

  if success
    p.success Added!
  form.form(action='/add' method='POST')
    input.input(type='text' placeholder='to-do task description' name='todo')
    button.btn Add

  div.todos
    if todos
      each todo in todos
        p.todo #{ todo.description }
    else
      p.todo No any to-do task created
